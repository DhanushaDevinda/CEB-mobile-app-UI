<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titile"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="139dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textViewCEBcare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CEBCare"
                android:textColor="#6b0233"
                android:paddingBottom="1dp"
                android:textSize="26dp" />

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Full name"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/email11"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="NIC/Passport number"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/email113"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Mobile phone"
                android:inputType="phone"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="username(Min 8 characters)"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="13dp"
                android:textAlignment="center"
                android:textColor="#6b0233"
                android:textColorHint="#6b0233"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="449dp" />


            <Button
                android:id="@+id/button"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corners"
                android:text="REGISTER"
                android:textColor="#6b0233"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="CEB Care 1.0.8 Â© 2020"
                android:textColor="#6b0233"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>